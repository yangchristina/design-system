{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "noImplicitAny": false,
    "lib": ["dom", "dom.iterable", "es2017", "esnext"],
    "allowJs": true,
    "isolatedModules": true
  },
  "include": ["index.ts", "src", "components", "hooks", "types", "utils", "custom", "global.d.ts"],
  "exclude": ["node_modules", "pages", "dist", "**/*.test.ts", "**/*.test.tsx"]
}
